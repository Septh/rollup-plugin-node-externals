    "version": "0.2.0",
    "configurations": [
        {
            "name": "Plugin",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/rollup/dist/bin/rollup",
            "windows": {
                "program": "${workspaceFolder}\\node_modules\\rollup\\dist\\bin\\rollup"
            },
            "args": [ "-c", "zz_rollup.config.js" ],
            "outputCapture": "std"
        }
    ]
}
