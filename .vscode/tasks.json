{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": "$eslint-stylish",
			"label": "npm: lint",
			"detail": "eslint src/index.ts"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.build.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: watch - tsconfig.build.json"
		}
	]
}
