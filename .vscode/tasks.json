{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: lint",
      "type": "npm",
      "script": "lint",
      "detail": "eslint src/index.ts",
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "tsc: watch - tsconfig.build.json",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "typescript",
      "tsconfig": "tsconfig.build.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
