{
  "name": "rollup-plugin-node-externals",
  "version": "2.1.6",
  "description": "Automatically declare NodeJS built-in modules and npm dependencies as 'external' in Rollup config",
  "author": "Stephan Schreiber <septh@sfr.fr>",
  "license": "MIT",
  "keywords": [
    "rollup",
    "rollup-plugin",
    "node",
    "electron",
    "npm",
    "builtin",
    "modules",
    "bundle",
    "external",
    "dependencies",
    "package.json"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Septh/rollup-plugin-node-externals"
  },
  "homepage": "https://github.com/Septh/rollup-plugin-node-externals",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/cjs/index.js",
    "dist/es/index.js",
    "dist/index.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist",
    "clean": "trash dist",
    "prepublishOnly": "npm run clean && npm run build && npm run types"
  },
  "peerDependencies": {
    "builtin-modules": "^3.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@wessberg/rollup-plugin-ts": "^1.2.24",
    "ava": "^3.8.2",
    "rollup": "^2.7.6",
    "trash": "^6.1.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "typescript-tslint-plugin": "^0.5.5"
  }
}
