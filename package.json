{
  "name": "rollup-plugin-node-externals",
  "version": "3.0.0",
  "description": "Automatically declare NodeJS built-in modules and npm dependencies as 'external' in Rollup config",
  "author": "Stephan Schreiber <septh@sfr.fr>",
  "contributors": [
    "Tomer Aberbach <tomeraberbach@gmail.com>",
    "Elad Ossadon <eossadon@lyft.com>"
  ],
  "license": "MIT",
  "keywords": [
    "rollup",
    "rollup-plugin",
    "node",
    "electron",
    "npm",
    "builtin",
    "modules",
    "bundle",
    "external",
    "dependencies",
    "package.json",
    "monorepo"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Septh/rollup-plugin-node-externals"
  },
  "homepage": "https://github.com/Septh/rollup-plugin-node-externals",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "import": "./dist/cjs/index.js",
    "require": "./dist/esm/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/cjs/index.js",
    "dist/esm/index.js",
    "dist/index.d.ts",
    "README.md"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "types": "tsc src/index.ts --declaration --emitDeclarationOnly --outFile dist/index.d.ts --stripInternal",
    "test": "ava",
    "watch-tests": "ava -w",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run types"
  },
  "dependencies": {
    "find-up": "^6.2.0"
  },
  "peerDependencies": {
    "rollup": "^2.60.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "ava": "^3.15.0",
    "ava-fast-check": "^4.0.2",
    "fast-check": "^2.20.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-ts": "^2.0.4",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "tslint": "^6.1.2",
    "typescript": "^4.5.2",
    "typescript-tslint-plugin": "^1.0.1"
  }
}
