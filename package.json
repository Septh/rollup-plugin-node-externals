{
    "name": "rollup-plugin-node-externals",
    "version": "1.1.1",
    "description": "Automatically declare NodeJS built-in modules and npm dependencies as 'external' in Rollup config",
    "author": "Stephan Schreiber <septh@sfr.fr>",
    "license": "MIT",
    "keywords": [
        "rollup",
        "rollup-plugin",
        "node",
        "npm",
        "modules",
        "bundle",
        "external",
        "dependencies",
        "package.json"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Septh/rollup-plugin-node-externals"
    },
    "homepage": "https://github.com/Septh/rollup-plugin-node-externals",
    "main": "dist/externals.cjs.js",
    "module": "dist/externals.ejs.js",
    "types": "index.d.ts",
    "files": [
        "dist/*.js",
        "index.d.ts",
        "README.md"
    ],
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -cw",
        "dist": "rollup -c --environment BUILD:dist",
        "types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir .",
        "clean": "trash dist"
    },
    "devDependencies": {
        "@wessberg/rollup-plugin-ts": "^1.1.54",
        "builtin-modules": "^3.1.0",
        "rollup": "^1.1.2",
        "trash": "^6.0.0",
        "tslib": "^1.9.3",
        "tslint": "^5.16.0",
        "typescript": "^3.5.1",
        "typescript-tslint-plugin": "^0.4.0"
    }
}
