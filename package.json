{
  "name": "rollup-plugin-node-externals",
  "version": "3.1.2",
  "description": "Automatically declare NodeJS built-in modules and npm dependencies as 'external' in Rollup config",
  "author": "Stephan Schreiber <septh@sfr.fr>",
  "contributors": [
    "Tomer Aberbach <tomeraberbach@gmail.com>",
    "Elad Ossadon <eossadon@lyft.com>"
  ],
  "keywords": [
    "rollup",
    "plugin",
    "external",
    "externals",
    "node",
    "builtin",
    "builtins",
    "dependencies",
    "devDependencies",
    "peerDependencies",
    "optionalDependencies",
    "modules",
    "monorepo"
  ],
  "homepage": "https://github.com/Septh/rollup-plugin-node-externals",
  "repository": {
    "type": "git",
    "url": "https://github.com/Septh/rollup-plugin-node-externals"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "rollup": ">=2.60.0"
  },
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.map"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "mkdir -p ./src/fixtures/monorepo/.git && ava --no-worker-threads",
    "watch-tests": "mkdir -p ./src/fixtures/monorepo/.git && ava --no-worker-threads -w",
    "lint": "eslint src/index.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run lint && npm run clean && npm run build"
  },
  "dependencies": {
    "find-up": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "ava": "^4.0.1",
    "ava-fast-check": "^5.0.0",
    "eslint": "^8.8.0",
    "fast-check": "^2.21.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-ts": "^2.0.5",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "rollup": "^2.60.0"
  }
}
